<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary700"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"

    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="priceranking.app.italobarreto.localizacaodb.activities.MainActivity">


    <TextView
        android:id="@+id/id_tv_lugar_atual"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lugar atual"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary50"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/id_nm_usu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome do usuario" />


            <TextView
                android:id="@+id/id_tx_local"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lugares lidos" />


        </LinearLayout>
    </ScrollView>

</LinearLayout>